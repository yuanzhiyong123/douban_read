.post-con {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.post-con .user-avator-date {
  margin: 10rpx 0 0 20rpx;
}

.post-con .user-avator {
  width: 55rpx;
  height: 55rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.post-con .post-date {
  vertical-align: middle;
  font-size: 10px;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 30rpx 20rpx;
}

.post-img {
  width: 750rpx;
  height: 340rpx;
}

.post-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.post-message {
  /* display: flex; */
  flex-direction: row;
  margin-left: 20rpx;
  font-size: 16px;
  margin-bottom: 10rpx;
}

.post-comment-icon {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-right: 16rpx;
  /* margin-top: 3px; */
}

.post-comment {
  font-size: 16px;
  vertical-align: middle;
  margin-right: 20px;
  color: #666;
}
