.container {
  display: flex;
  flex-direction: column;
}

.banner-con {
  width: 100%;
  height: 450rpx;
  position: relative;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-music {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -55rpx;
  margin-left: -51rpx;
}

.post-info {
  flex-direction: row;
  margin: 22rpx 0 40rpx 30rpx;
  color: #aeaeae;
}

.post-info .avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.post-info .author {
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 22rpx;
}

.post-info .fabiao {
  font-size: 22rpx;
  vertical-align: middle;
  margin-right: 22rpx;
}

.post-info .date {
  font-size: 22rpx;
  vertical-align: middle;
}
.title{
  font-size: 34rpx;
  color: #4b556c;
  font-weight: bold;
  line-height: 56rpx;
  margin: 0 0 30rpx 0;
  padding: 0 30rpx; 
}

.button-con {
  position: relative;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}
.button-con .line{
  position: absolute;
  height: 1px;
  background-color: #ccc;
  width: 90%;
  left: 5%;
  top: 50%;
  z-index: -1;
}

.button-con image {
  width: 90rpx;
  height: 90rpx;
  float: right;
}

.button-con .share {
  margin-right: 30rpx;
} 
.content{
  font-size: 22rpx;
  line-height: 44rpx;
  color:#666;
  padding: 0 30rpx 30rpx 30rpx;
}
